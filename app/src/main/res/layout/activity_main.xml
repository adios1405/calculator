<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="0"
            android:fontFamily="@font/zt"
            android:gravity="right"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textSize="50sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">
            </Button>
            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

            </Button>
            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

            </Button>
            <Button
                android:id="@+id/btn_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">
            </Button>
            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

            </Button>
            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

            </Button>

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/zt"
                android:text="-"
                android:textSize="35sp">

            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">
            </Button>
            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

            </Button>
            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

            </Button>
            <Button
                android:id="@+id/btn_mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">
            </Button>
            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

            </Button>
            <Button
                android:id="@+id/btn_equ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

            </Button>
            <Button
                android:id="@+id/btn_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="รท"
                android:fontFamily="@font/zt"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

            </Button>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>